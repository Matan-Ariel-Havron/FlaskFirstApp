<article class="media content-section">
    {% block user_spesific_outside_post %}
    {% endblock user_spesific_outside_post %}
    <img class="rounded-circle article-image"
        src="{{ url_for('static', filename='profile_pics/' + post.author.image_file) }}">
    <div class="media-body ml-2">
        <div class="article-metadata">
            {% block user_spesific_inside_post %}
            {% endblock user_spesific_inside_post %}
            <a class="mr-2"
                href="{{ url_for('users.user_posts', username=post.author.username) }}">
                {{ post.author.username }}</a>
            <small class="text-muted">
                {{ post.date_posted.strftime('%Y-%m-%d %H:%M') }}</small>
        </div>
        <h2><a class="article-title" href="{{ url_for('posts.post', post_id=post.id) }}">{{ post.title }}</a></h2>
        <p class="article-content">{{ post.content }}</p>
        {% if post.link %}
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{ post.link }}" allowfullscreen></iframe>
        </div>
        {% endif %}
    </div>
</article>